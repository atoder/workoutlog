= simple_form_for(@workout) do |f|
  = f.input :date, label: "Date", wrapper: :horizontal_select_date 
  = f.input :workout, label: "What part did you Workout", input_html: { class: 'form-control' }
  = f.input :mood, label: "How are you feeling", input_html: { class: 'form-control' }
  = f.input :length, label: "How long was the workout", input_html: { class: 'form-control' }
  %br/
  = f.button :submit
